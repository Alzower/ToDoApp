{% extends 'base.html.twig' %}

{% block title %}Task{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Task</h1>

        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th scope="row">Id</th>
                    <td>{{ task.id }}</td>
                </tr>
                <tr>
                    <th scope="row">Title</th>
                    <td>{{ task.title }}</td>
                </tr>
                <tr>
                    <th scope="row">Description</th>
                    <td>{{ task.description }}</td>
                </tr>
                <tr>
                    <th scope="row">Status</th>
                    <td>
                        <span class="badge {{ task.status ? 'bg-success' : 'bg-danger' }}">
                            {{ task.status ? 'Yes' : 'No' }}
                        </span>
                    </td>
                </tr>
                <tr>
                    <th scope="row">Created at</th>
                    <td>{{ task.createdAt ? task.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
            </tbody>
        </table>

        <div class="d-flex gap-2">
            <a href="{{ path('app_task_index') }}" class="btn btn-secondary">Back to list</a>
            <a href="{{ path('app_task_edit', {'id': task.id}) }}" class="btn btn-primary">Edit</a>
        </div>
    </div>
{% endblock %}